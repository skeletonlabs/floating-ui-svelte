{
	"files": {
		"ignore": ["dist", ".svelte-kit", ".vercel", "node_modules", "pagefind"]
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off",
						"noNonNullAssertion": "off"
					},
					"suspicious": {
						"noAssignInExpressions": "off"
					}
				}
			}
		},
		{
			"include": ["*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noAssignInExpressions": "off"
					}
				}
			}
		}
	]
}
